@using WebApplication1.Models
@model List<Giohang>

@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="container" style="margin-top: 30px; margin-bottom: 30px;">
    <h2 class="text-center" style="margin-bottom: 20px; font-weight: bold; color: #333;">GIỎ HÀNG CỦA BẠN</h2>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-warning text-center">
            <p style="font-size: 16px;">Giỏ hàng của bạn đang trống.</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="margin-top: 10px;">
                <i class="fa fa-arrow-left"></i> Quay lại mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr class="active">
                        <th style="text-align:center;">Ảnh bìa</th>
                        <th style="text-align:center;">Tên sách</th>
                        <th style="text-align:center;">Đơn giá</th>
                        <th style="text-align:center;">Số lượng</th>
                        <th style="text-align:center;">Thành tiền</th>
                        <th style="text-align:center;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="text-align:center; vertical-align: middle;">
                                <a href="@Url.Action("Details", "Home", new { id = item.iMaSach })">
                                    <img src="~/images/books/@item.sAnhBia" style="width: 60px; height: auto; border: 1px solid #ddd;" alt="@item.sTenSach" />
                                </a>
                            </td>

                            <td style="vertical-align: middle;">
                                <a href="@Url.Action("Details", "Home", new { id = item.iMaSach })" style="color: #333; font-weight: 600;">
                                    @item.sTenSach
                                </a>
                            </td>

                            <td style="text-align:center; vertical-align: middle;">
                                @String.Format("{0:0,0}", item.dDonGia) đ
                            </td>

                            <td style="text-align:center; vertical-align: middle;">
                                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { iMaSP = item.iMaSach }))
                                {
                                    <div style="display: flex; justify-content: center; align-items: center;">
                                        <input type="number" min="1" name="txtSoLuong" value="@item.iSoLuong"
                                               class="form-control"
                                               style="width: 70px; text-align: center; margin-right: 5px; color: #000; font-weight: bold; padding-left: 5px; padding-right: 0;" />

                                        <button type="submit" class="btn btn-sm btn-info" title="Cập nhật" style="height: 34px; line-height: 1;">
                                            <i class="fa fa-refresh"></i>
                                        </button>
                                    </div>
                                }
                            </td>

                            <td style="text-align:center; vertical-align: middle; color: #d9534f; font-weight: bold;">
                                @String.Format("{0:0,0}", item.dThanhTien) đ
                            </td>

                            <td style="text-align:center; vertical-align: middle;">
                                <a href="@Url.Action("XoaGioHang", "GioHang", new { iMaSP = item.iMaSach })"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Bạn chắc chắn muốn xóa sách này khỏi giỏ hàng?')">
                                    <i class="fa fa-trash"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="4" style="text-align:right; font-weight:bold; font-size: 16px; padding-right: 20px;">
                            TỔNG TIỀN THANH TOÁN:
                        </td>
                        <td colspan="2" style="color: #d9534f; font-weight:bold; font-size: 18px;">
                            @String.Format("{0:0,0}", ViewBag.TongTien) VNĐ
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div style="margin-top: 20px; display: flex; justify-content: space-between;">
            <a href="@Url.Action("Index", "Home")" class="btn btn-default" style="padding: 10px 20px;">
                <i class="fa fa-arrow-left"></i> Tiếp tục mua hàng
            </a>
            <a href="@Url.Action("DatHang", "GioHang")" class="btn btn-success" style="padding: 10px 30px; background-color: #77b748; border-color: #77b748;">
                Tiến hành đặt hàng <i class="fa fa-arrow-right"></i>
            </a>
        </div>
    }
</div>