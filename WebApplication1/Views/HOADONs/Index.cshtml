@model IEnumerable<WebApplication1.Models.HOADON>

@{
    ViewBag.Title = "Quản lý Hóa đơn bán hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between bg-primary text-white">
            <h5 class="m-0 font-weight-bold">
                <i class="fas fa-file-invoice-dollar me-2"></i>DANH SÁCH HÓA ĐƠN BÁN HÀNG
            </h5>
            <a href="@Url.Action("Create")" class="btn btn-light btn-sm text-primary fw-bold shadow-sm">
                <i class="fas fa-cart-plus"></i> Lập hóa đơn mới
            </a>
        </div>

        <div class="card-body">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Mã HD</th>
                            <th>Khách hàng</th>
                            <th>Nhân viên lập</th>
                            <th>Ngày lập</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center align-middle font-weight-bold">#@item.MaHD</td>
                                <td class="align-middle">
                                    @if (item.KHACHHANG != null)
                                    {
                                        <i class="fas fa-user text-secondary me-1"></i> @item.KHACHHANG.HoTen
                                    }
                                    else
                                    {
                                        <span class="text-muted">Khách vãng lai</span>
                                    }
                                </td>
                                <td class="align-middle">@item.NHANVIEN.HoTen</td>
                                <td class="text-center align-middle">@item.NgayLap.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-end align-middle text-danger fw-bold">
                                    @String.Format("{0:N0}", item.TongTien) đ
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-success p-2">
                                        <i class="fas fa-check me-1"></i> @item.TrangThai
                                    </span>
                                </td>
                                <td class="text-center align-middle">
                                    <a href="@Url.Action("Details", new { id = item.MaHD })" class="btn btn-info btn-sm text-white" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", new { id = item.MaHD })" class="btn btn-danger btn-sm" title="Xóa hóa đơn">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>