@model WebApplication1.Models.HOADON

@{
    ViewBag.Title = "Cập nhật hóa đơn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-warning text-dark">
                    <h5 class="m-0 font-weight-bold">
                        <i class="fas fa-edit me-2"></i>Cập Nhật Thông Tin Hóa Đơn #@Model.MaHD
                    </h5>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.MaHD)
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.MaKH, "Khách hàng", htmlAttributes: new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        @Html.DropDownList("MaKH", null, htmlAttributes: new { @class = "form-select" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger small" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.MaNV, "Nhân viên lập", htmlAttributes: new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-id-badge"></i></span>
                                        @Html.DropDownList("MaNV", null, htmlAttributes: new { @class = "form-select" })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger small" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    @Html.LabelFor(model => model.NgayLap, "Ngày lập", htmlAttributes: new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                        @Html.EditorFor(model => model.NgayLap, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    @Html.ValidationMessageFor(model => model.NgayLap, "", new { @class = "text-danger small" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(model => model.TrangThai, "Trạng thái", htmlAttributes: new { @class = "form-label fw-bold" })
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                        @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control" } })
                                    </div>
                                    <small class="text-muted">Ví dụ: Đã thanh toán, Đã hủy...</small>
                                    @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="mb-4">
                            @Html.LabelFor(model => model.TongTien, "Tổng tiền (VNĐ)", htmlAttributes: new { @class = "form-label fw-bold text-danger" })
                            <div class="input-group">
                                <span class="input-group-text bg-light text-danger fw-bold"><i class="fas fa-money-bill-wave"></i></span>
                                @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control fw-bold text-danger", @readonly = "readonly" } })
                            </div>
                            <small class="text-muted fst-italic">
                                <i class="fas fa-lock"></i> Tổng tiền được tính tự động từ chi tiết hóa đơn, không thể sửa thủ công.
                            </small>
                            @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning px-4 fw-bold">
                                <i class="fas fa-save me-1"></i> Lưu thay đổi
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}