@model List<WebApplication1.Models.CartItem>

@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid pt-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-shopping-cart text-primary"></i> Giỏ Hàng Của Bạn</h1>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5 bg-white shadow-sm rounded">
            <i class="fas fa-shopping-basket fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Giỏ hàng của bạn đang trống!</h4>
            <p class="text-secondary mb-4">Hãy chọn thêm sách vào giỏ hàng nhé.</p>
            <a href="@Url.Action("Index", "SACHes")" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-arrow-left me-2"></i> Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="card shadow mb-4">
            <div class="card-header py-3 bg-primary text-white d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">Danh sách sản phẩm (@Model.Count)</h6>
                <a href="@Url.Action("Index", "SACHes")" class="btn btn-light btn-sm text-primary fw-bold">
                    <i class="fas fa-plus"></i> Mua thêm sách
                </a>
            </div>

            <div class="card-body p-0">
                @using (Html.BeginForm("CapNhatGioHang", "HOADONs", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0 align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 10%;">Mã sách</th>
                                    <th style="width: 35%;">Tên sách</th>
                                    <th style="width: 15%;" class="text-end">Đơn giá</th>
                                    <th style="width: 20%;" class="text-center">Số lượng</th>
                                    <th style="width: 15%;" class="text-end">Thành tiền</th>
                                    <th style="width: 5%;" class="text-center">Xóa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td class="fw-bold text-secondary">#@Model[i].MaSach</td>
                                        <td>
                                            <span class="fw-bold text-primary">@Model[i].TenSach</span>
                                        </td>
                                        <td class="text-end">@String.Format("{0:N0}", Model[i].DonGia) đ</td>

                                        <td class="text-center">
                                            <div class="input-group input-group-sm justify-content-center" style="width: 140px; margin: 0 auto;">
                                                <a href="@Url.Action("GiamSoLuong", "HOADONs", new { id = Model[i].MaSach })"
                                                   class="btn btn-outline-secondary @(Model[i].SoLuong <= 1 ? "disabled" : "")">
                                                    <i class="fas fa-minus"></i>
                                                </a>

                                                <input type="hidden" name="[@i].MaSach" value="@Model[i].MaSach" />

                                                <input type="number" name="[@i].SoLuong" value="@Model[i].SoLuong"
                                                       class="form-control text-center fw-bold border-secondary"
                                                       min="1" style="max-width: 60px;" />

                                                <a href="@Url.Action("TangSoLuong", "HOADONs", new { id = Model[i].MaSach })"
                                                   class="btn btn-outline-secondary">
                                                    <i class="fas fa-plus"></i>
                                                </a>
                                            </div>
                                        </td>

                                        <td class="text-end fw-bold text-danger">
                                            @String.Format("{0:N0}", Model[i].ThanhTien) đ
                                        </td>

                                        <td class="text-center">
                                            <a href="@Url.Action("XoaGioHang", "HOADONs", new { id = Model[i].MaSach })"
                                               class="btn btn-danger btn-sm rounded-circle"
                                               onclick="return confirm('Bạn có chắc muốn xóa cuốn sách này khỏi giỏ hàng?')"
                                               title="Xóa sản phẩm">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light">
                                <tr>
                                    <td colspan="4" class="text-end fw-bold text-uppercase py-3 fs-5">Tổng tiền thanh toán:</td>
                                    <td colspan="2" class="text-end fw-bold text-danger py-3 fs-4">
                                        @String.Format("{0:N0}", Model.Sum(x => x.ThanhTien)) đ
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <div class="card-footer bg-white d-flex justify-content-end gap-2 py-3">
                        <button type="submit" class="btn btn-warning shadow-sm fw-bold text-dark">
                            <i class="fas fa-sync-alt me-2"></i> Cập nhật giỏ hàng
                        </button>

                        <a href="@Url.Action("Create", "HOADONs")" class="btn btn-success btn-lg shadow-sm fw-bold">
                            <i class="fas fa-check-circle me-2"></i> TIẾN HÀNH THANH TOÁN
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="alert alert-info d-flex align-items-center shadow-sm">
            <i class="fas fa-info-circle fa-2x me-3"></i>
            <div>
                <strong>Lưu ý:</strong>
                <ul class="mb-0 ps-3">
                    <li>Bạn có thể nhập trực tiếp số lượng vào ô và bấm <b>"Cập nhật giỏ hàng"</b>.</li>
                    <li>Tổng tiền trên chưa bao gồm ưu đãi thành viên (nếu có).</li>
                </ul>
            </div>
        </div>
    }
</div>