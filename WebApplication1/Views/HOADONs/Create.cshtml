@model WebApplication1.Models.HOADON

@{
    ViewBag.Title = "Xác nhận thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy dữ liệu từ ViewBag (đã được Controller chuẩn bị)
    var gioHang = ViewBag.GioHang as List<WebApplication1.Models.CartItem>;
    var tongTien = ViewBag.TongTien ?? 0;
}

<div class="container-fluid pt-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800"><i class="fas fa-cash-register text-primary"></i> Lập Hóa Đơn Bán Hàng</h1>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-secondary text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold"><i class="fas fa-list"></i> Danh sách sản phẩm (@(gioHang != null ? gioHang.Count : 0))</h6>
                    <a href="@Url.Action("GioHang")" class="btn btn-light btn-sm text-dark fw-bold">
                        <i class="fas fa-edit"></i> Chỉnh sửa giỏ hàng
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (gioHang != null && gioHang.Count > 0)
                                {
                                    foreach (var item in gioHang)
                                    {
                                        <tr>
                                            <td class="align-middle">
                                                <span class="fw-bold text-primary">@item.TenSach</span>
                                                <div class="small text-muted">Mã: #@item.MaSach</div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <span class="badge bg-light text-dark border px-3 py-2">x @item.SoLuong</span>
                                            </td>
                                            <td class="text-end align-middle">@String.Format("{0:N0}", item.DonGia)</td>
                                            <td class="text-end align-middle fw-bold text-dark">@String.Format("{0:N0}", item.ThanhTien)</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center py-4 text-muted">
                                            Giỏ hàng trống. Vui lòng thêm sách trước khi thanh toán.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-success">
                                <tr>
                                    <td colspan="3" class="text-end fw-bold text-uppercase pt-3">Tổng cộng thành tiền:</td>
                                    <td class="text-end fw-bold text-danger fs-5 pt-3">
                                        @String.Format("{0:N0}", tongTien) đ
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4 border-left-primary">
                <div class="card-header py-3 bg-primary text-white">
                    <h6 class="m-0 font-weight-bold"><i class="fas fa-user-check"></i> Thông Tin Hóa Đơn</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label class="form-label fw-bold">Khách hàng <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                @Html.DropDownList("MaKH", null, "-- Chọn khách hàng --", new { @class = "form-select", @required = "required" })
                            </div>
                            @Html.ValidationMessageFor(m => m.MaKH, "", new { @class = "text-danger small mt-1" })
                            <div class="mt-2 text-end">
                                <a href="@Url.Action("Index", "KHACHHANGs")" class="text-decoration-none small">
                                    <i class="fas fa-plus-circle"></i> Thêm khách hàng mới
                                </a>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">Nhân viên lập</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="fas fa-id-badge"></i></span>
                                <input type="text" class="form-control bg-light" value="@Session["HoTenNV"]" readonly />
                            </div>
                            <small class="text-muted">Nhân viên được lấy tự động từ tài khoản đăng nhập.</small>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <span class="fw-bold text-secondary">Tổng thanh toán:</span>
                            <span class="fw-bold text-danger fs-4">@String.Format("{0:N0}", tongTien) đ</span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg py-3 shadow-sm">
                                <i class="fas fa-check-circle me-2"></i> XÁC NHẬN THANH TOÁN
                            </button>

                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-2"></i> Hủy bỏ
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="alert alert-info shadow-sm mt-3">
                <i class="fas fa-info-circle me-2"></i>
                <small>Hệ thống sẽ tự động trừ kho và tích điểm cho khách hàng ngay khi bấm xác nhận.</small>
            </div>
        </div>
    </div>
</div>