@model IEnumerable<WebApplication1.Controllers.BaoCaoTonKhoViewModel>

@{
    ViewBag.Title = "Báo Cáo Nhập Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-danger mt-3"><i class="fas fa-exclamation-triangle"></i> Sách Cần Nhập Hàng</h2>
<hr />

<div class="alert alert-info">
    Danh sách các cuốn sách có số lượng tồn kho <b>dưới 10</b>.
</div>

@if (!Model.Any())
{
    <div class="alert alert-success">Kho hàng ổn định.</div>
}
else
{
    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Mã Sách</th>
                <th>Tên Sách</th>
                <th>Tồn Kho</th>
                <th>Nhà Cung Cấp (NXB)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaSach</td>
                    <td>@item.TenSach</td>
                    <td style="color:red; font-weight:bold;">@item.SoLuongTon</td>
                    <td>@item.TenNXB</td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="mt-3">
    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại danh sách</a>
</div>