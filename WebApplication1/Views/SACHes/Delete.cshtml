@model WebApplication1.Models.SACH

@{
    ViewBag.Title = "Xóa Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="fas fa-exclamation-triangle me-3" style="font-size: 2rem;"></i>
        <div>
            <h5 class="alert-heading fw-bold mb-1">CẢNH BÁO QUAN TRỌNG!</h5>
            <p class="mb-0">
                Bạn đang thực hiện xóa cuốn sách: <strong>@Model.TenSach</strong>.<br />
                Hành động này sẽ xóa vĩnh viễn dữ liệu và <strong>không thể hoàn tác</strong>.
            </p>
        </div>
    </div>

    <div class="card border-danger shadow">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-trash"></i> Xác nhận thông tin sách cần xóa</h5>
        </div>

        <div class="card-body">
            <div class="row">

                <div class="col-md-3 text-center mb-3 mb-md-0">
                    <div class="p-2 border rounded bg-light">
                        @if (!string.IsNullOrEmpty(Model.AnhBia))
                        {
                            <img src="~/images/books/@Model.AnhBia"
                                 alt="@Model.TenSach"
                                 class="img-fluid rounded"
                                 style="max-height: 250px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="text-muted py-5">
                                <i class="fas fa-book fa-3x mb-2"></i><br />
                                <span>Không có ảnh bìa</span>
                            </div>
                        }
                    </div>
                </div>

                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-3 text-secondary">Tên sách:</dt>
                        <dd class="col-sm-9 fw-bold fs-5 text-dark">@Html.DisplayFor(model => model.TenSach)</dd>

                        <dt class="col-sm-3 text-secondary">Mã sách:</dt>
                        <dd class="col-sm-9">#@Html.DisplayFor(model => model.MaSach)</dd>

                        <dt class="col-sm-3 text-secondary">Tác giả:</dt>
                        <dd class="col-sm-9">@(Model.TACGIA != null ? Model.TACGIA.TenTG : "---")</dd>

                        <dt class="col-sm-3 text-secondary">Thể loại:</dt>
                        <dd class="col-sm-9">@(Model.THELOAI != null ? Model.THELOAI.TenTL : "---")</dd>

                        <dt class="col-sm-3 text-secondary">Nhà xuất bản:</dt>
                        <dd class="col-sm-9">@(Model.NXB != null ? Model.NXB.TenNXB : "---")</dd>

                        <dt class="col-sm-3 text-secondary">Năm xuất bản:</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.NamXB)</dd>

                        <dt class="col-sm-3 text-secondary">Tồn kho:</dt>
                        <dd class="col-sm-9 fw-bold text-primary">@Html.DisplayFor(model => model.SoLuongTon)</dd>

                        <dt class="col-sm-3 text-secondary">Giá nhập / Bán:</dt>
                        <dd class="col-sm-9">
                            <span class="text-danger">@string.Format("{0:N0} đ", Model.GiaNhap)</span>
                            <span class="mx-2">/</span>
                            <span class="text-success fw-bold">@string.Format("{0:N0} đ", Model.GiaBan)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light d-flex justify-content-end">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ActionLink("Hủy bỏ, quay lại", "Index", null, new { @class = "btn btn-secondary me-2" })

                <button type="submit" class="btn btn-danger fw-bold">
                    <i class="fas fa-trash-alt me-1"></i> XÁC NHẬN XÓA
                </button>
            }
        </div>
    </div>
</div>