@model WebApplication1.Models.SACH

@{
    ViewBag.Title = "Cập nhật thông tin sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Edit", "SACHes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm p-4 mt-3">
        <h5 class="card-header bg-warning text-white mb-3">Cập nhật sách: @Model.TenSach</h5>

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaSach)

            @Html.HiddenFor(model => model.AnhBia)

            <div class="row mb-3">
                @Html.LabelFor(model => model.TenSach, "Tên Sách", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                    @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                </div>
            </div>

            @* --- PHẦN XỬ LÝ ẢNH BÌA --- *@
            <div class="row mb-3">
                <label class="control-label col-md-2 fw-bold">Ảnh bìa hiện tại</label>
                <div class="col-md-10">
                    @if (!string.IsNullOrEmpty(Model.AnhBia))
                    {
                        <img src="~/images/books/@Model.AnhBia" style="max-width: 150px; border: 1px solid #ddd; padding: 5px; border-radius: 5px;" />
                    }
                    else
                    {
                        <span class="text-warning">Chưa có ảnh bìa</span>
                    }
                </div>
            </div>

            <div class="row mb-3">
                <label class="control-label col-md-2 fw-bold">Thay ảnh mới</label>
                <div class="col-md-10">
                    <input type="file" name="uploadAnhBia" class="form-control" accept="image/*" />
                    <small class="text-muted">Chỉ chọn nếu bạn muốn thay đổi ảnh bìa hiện tại.</small>
                </div>
            </div>
            @* ------------------------- *@

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="fw-bold mb-1">Thể Loại</label>
                    @Html.DropDownList("MaTL", null, htmlAttributes: new { @class = "form-select form-control" })
                    @Html.ValidationMessageFor(model => model.MaTL, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="fw-bold mb-1">Tác Giả</label>
                    @Html.DropDownList("MaTG", null, htmlAttributes: new { @class = "form-select form-control" })
                    @Html.ValidationMessageFor(model => model.MaTG, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="fw-bold mb-1">Nhà Xuất Bản</label>
                    @Html.DropDownList("MaNXB", null, htmlAttributes: new { @class = "form-select form-control" })
                    @Html.ValidationMessageFor(model => model.MaNXB, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    <label class="fw-bold mb-1">Năm XB</label>
                    @Html.EditorFor(model => model.NamXB, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-4">
                    @Html.LabelFor(model => model.SoLuongTon, "Tồn kho (Read-only)", new { @class = "fw-bold" })
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.GiaNhap, "Giá Nhập", new { @class = "fw-bold" })
                    @Html.EditorFor(model => model.GiaNhap, new { htmlAttributes = new { @class = "form-control", type = "number", id = "GiaNhap" } })
                    @Html.ValidationMessageFor(model => model.GiaNhap, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-4">
                    @Html.LabelFor(model => model.GiaBan, "Giá Bán", new { @class = "fw-bold" })
                    @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control", type = "number", id = "GiaBan" } })
                    @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })

                    <span id="price-error" class="text-danger fw-bold" style="display:none; font-size: 13px;">
                        <i class="fas fa-exclamation-triangle"></i> Giá bán phải lớn hơn giá nhập!
                    </span>
                </div>
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.MoTa, "Mô Tả", new { @class = "fw-bold" })
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = "3" })
            </div>

            <div class="d-flex justify-content-end mt-4">
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary me-2" })
                <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Lưu thay đổi</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            // Script kiểm tra Giá Bán > Giá Nhập ngay khi nhập liệu
            $('#GiaBan, #GiaNhap').on('change keyup', function () {
                var giaNhap = parseFloat($('#GiaNhap').val()) || 0;
                var giaBan = parseFloat($('#GiaBan').val()) || 0;

                if (giaBan > 0 && giaBan <= giaNhap) {
                    $('#price-error').show();
                    // Có thể disable nút submit nếu muốn chặt chẽ hơn
                    // $('button[type="submit"]').prop('disabled', true);
                } else {
                    $('#price-error').hide();
                    // $('button[type="submit"]').prop('disabled', false);
                }
            });
        });
    </script>
}