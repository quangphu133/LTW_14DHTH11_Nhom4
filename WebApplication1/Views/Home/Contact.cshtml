}

<style>
    /* =========================================
       1. CSS CHO BANNER GIỐNG HÌNH MẪU
       ========================================= */
    .contact-banner {
        background: #f9f9f9 url('/images/contact-bg.jpg') no-repeat center center;
        background-size: cover;
        padding: 80px 0; /* Khoảng cách trên dưới rộng ra */
        text-align: center;
        position: relative;
        border-bottom: 1px solid #eee;
    }

    .banner-title {
        font-size: 42px;
        font-weight: 800; /* Chữ đậm */
        color: #333;
        text-transform: uppercase;
        margin: 0 0 15px 0;
        letter-spacing: 1px;
    }

    /* Hộp màu xanh chứa Breadcrumb */
    .green-breadcrumb-box {
        background-color: #77b748; /* Màu xanh chủ đạo của web */
        display: inline-block; /* Để hộp co lại vừa nội dung */
        padding: 8px 25px;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        position: relative;
    }

        .green-breadcrumb-box a {
            color: #fff;
            text-decoration: none;
            transition: 0.3s;
        }

            .green-breadcrumb-box a:hover {
                color: #e0e0e0;
                text-decoration: underline;
            }

        .green-breadcrumb-box i {
            margin: 0 8px;
            font-size: 12px;
        }

    /* =========================================
       CSS CHO THÀNH VIÊN
       ========================================= */
    .member-card {
        background: #fff;
        border: 1px solid #e1e1e1;
        border-radius: 8px;
        padding: 30px 20px;
        text-align: center;
        margin-bottom: 30px;
        transition: all 0.3s ease;
    }

        .member-card:hover {
            border-color: #77b748;
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transform: translateY(-5px);
        }

    .member-icon {
        font-size: 60px;
        color: #ddd;
        margin-bottom: 15px;
        transition: 0.3s;
    }

    .member-card:hover .member-icon {
        color: #77b748;
    }

    .member-name {
        font-size: 18px;
        font-weight: bold;
        color: #333;
        margin-bottom: 5px;
        text-transform: uppercase;
    }

    .member-role {
        display: inline-block;
        background: #f0f0f0;
        color: #555;
        padding: 4px 12px;
        border-radius: 15px;
        font-size: 12px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .member-mssv {
        color: #777;
        font-family: monospace;
        font-size: 14px;
    }
</style>

