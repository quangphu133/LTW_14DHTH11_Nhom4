@model IEnumerable<WebApplication1.Models.PHIEUNHAP>

@{
    ViewBag.Title = "Quản lý Nhập kho";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
            <h5 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-boxes"></i> LỊCH SỬ NHẬP KHO
            </h5>

            <div>
                <a href="@Url.Action("BaoCao")" class="btn btn-info mr-2 shadow-sm">
                    <i class="fas fa-chart-line"></i> Báo cáo NCC
                </a>

                <a href="@Url.Action("Create")" class="btn btn-success shadow-sm">
                    <i class="fas fa-plus-circle"></i> Nhập hàng mới
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (TempData["ThongBao"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["ThongBao"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            @if (TempData["Loi"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i> @TempData["Loi"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark text-center">
                        <tr>
                            <th>Mã PN</th>
                            <th>Nhà Cung Cấp</th>
                            <th>Người Nhập</th>
                            <th>Ngày Nhập</th>
                            <th>Tổng Tiền</th>
                            <th>Trạng Thái</th>
                            <th style="width: 250px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center font-weight-bold">#@item.MaPN</td>
                                <td>@item.NXB.TenNXB</td>
                                <td>@item.NHANVIEN.HoTen</td>
                                <td class="text-center">@item.NgayNhap.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-right text-primary font-weight-bold">
                                    @string.Format("{0:N0}", item.TongTien) đ
                                </td>
                                <td class="text-center">
                                    @if (item.TrangThai == "Hoàn thành")
                                    {
                                        <span class="badge badge-success p-2 text-dark">Đã nhập kho</span>
                                    }
                                    else if (item.TrangThai == "Đã hủy")
                                    {
                                        <span class="badge badge-secondary p-2 text-dark">Đã hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-warning p-2 text-dark">Đang xử lý</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.TrangThai != "Hoàn thành" && item.TrangThai != "Đã hủy")
                                    {
                                        <a href="@Url.Action("HoanThanhPhieu", new { id = item.MaPN })"
                                           class="btn btn-sm btn-success mb-1"
                                           onclick="return confirm('Bạn có chắc chắn muốn hoàn thành phiếu này? Kho sẽ được cập nhật.')">
                                            <i class="fas fa-check"></i> Hoàn thành
                                        </a>

                                        <a href="@Url.Action("NhapChiTiet", new { id = item.MaPN })"
                                           class="btn btn-sm btn-primary mb-1">
                                            <i class="fas fa-edit"></i> Sửa
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("NhapChiTiet", new { id = item.MaPN })"
                                           class="btn btn-sm btn-outline-secondary"
                                           title="Xem chi tiết">
                                            <i class="fas fa-eye"></i> Xem chi tiết
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>