@model WebApplication1.Models.KHACHHANG
@{ ViewBag.Title = "Tích Điểm"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Tích Điểm Thủ Công</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-@ViewBag.MessageType">@ViewBag.Message</div>
}

<div class="card p-4">
    <h4>Khách hàng: <b>@Model.HoTen</b></h4>
    <p>Điểm hiện tại: <span class="badge bg-success">@Model.DiemTichLuy</span></p>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("MaKH", Model.MaKH)
        <div class="form-group mb-3">
            <label>Số điểm muốn cộng thêm:</label>
            <input type="number" name="DiemMuonThem" class="form-control" required min="1" />
        </div>
        <button type="submit" class="btn btn-primary">Cộng điểm</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
    }
</div>