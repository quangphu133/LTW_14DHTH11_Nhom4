@model IEnumerable<WebApplication1.Models.NHANVIEN>

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Thêm nhân viên mới", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgaySinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChucVu)
            </th>
            <th>
                Tài khoản (Username)
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen)
                </td>
                <td>
                    @if (item.NgaySinh.HasValue)
                    {
                        @item.NgaySinh.Value.ToString("dd/MM/yyyy")
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChucVu)
                </td>

                <td style="color: #007bff; font-weight: bold;">
                    @if (item.Users != null && item.Users.Count > 0)
                    {
                        // Lấy username của tài khoản đầu tiên tìm thấy
                        @item.Users.FirstOrDefault().Username
                    }
                    else
                    {
                        <span style="color: #999; font-style: italic; font-weight: normal;">(Chưa có)</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaNV }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaNV }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaNV })
                </td>
            </tr>
        }
    </tbody>

</table>