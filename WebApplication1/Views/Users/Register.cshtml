@model WebApplication1.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng Ký";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        body {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1507842217343-583bb7270b66?q=80&w=2690&auto=format&fit=crop');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            margin: 0;
            min-height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: Arial, sans-serif;
            padding: 20px 0;
        }

        .register-card {
            width: 500px;
            max-width: 95%;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 15px 30px rgba(0,0,0,0.5);
            overflow: hidden;
        }

        .card-header {
            background-color: #77b748;
            color: white;
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid #eee;
        }

            .card-header h3 {
                margin: 0;
                font-weight: bold;
                text-transform: uppercase;
                font-size: 22px;
            }

        .card-body {
            padding: 25px;
        }

        .form-group {
            margin-bottom: 15px;
        }

            .form-group label {
                display: block;
                margin-bottom: 5px;
                font-weight: 600;
                color: #555;
            }

        .form-control {
            height: 40px;
            border-radius: 4px;
            box-shadow: none;
            border-color: #ddd;
        }

            .form-control:focus {
                border-color: #77b748;
                box-shadow: 0 0 5px rgba(119, 183, 72, 0.5);
            }

        .btn-register {
            background-color: #77b748;
            color: white;
            border: none;
            padding: 12px;
            width: 100%;
            font-weight: bold;
            text-transform: uppercase;
            font-size: 16px;
            border-radius: 4px;
            transition: all 0.3s;
            margin-top: 10px;
        }

            .btn-register:hover {
                background-color: #5da32b;
                color: #fff;
                text-decoration: none;
            }

        .card-footer {
            background: #f9f9f9;
            padding: 15px;
            text-align: center;
            border-top: 1px solid #eee;
        }

            .card-footer a {
                color: #77b748;
                font-weight: bold;
            }
    </style>
</head>
<body>

    <div class="register-card">
        <div class="card-header">
            <h3>Đăng Ký Thành Viên</h3>
            <p style="margin: 5px 0 0; font-size: 13px; opacity: 0.9;">Tạo tài khoản để mua sách và tích điểm</p>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("Register", "Users", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label>Họ và tên</label>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Nguyễn Văn A" })
                            @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "09xxx" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Email, new
                    {
                        @class = "form-control",
                        type = "email",
                        placeholder = "email@example.com",

                        // ID để JS bắt
                        id = "email-field",

                        // CSS ép hiển thị chữ thường
                        style = "text-transform: lowercase;",

                        // Thuộc tính chặn viết hoa
                        autocapitalize = "none",
                        spellcheck = "false",
                        autocorrect = "off"
                    })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    @Html.TextBoxFor(m => m.Username, new
                    {
                        @class = "form-control",
                        placeholder = "Username",

                        // ID để JS bắt
                        id = "username-field",

                        // CSS ép hiển thị chữ thường
                        style = "text-transform: lowercase;",

                        // Thuộc tính chặn viết hoa
                        autocapitalize = "none",
                        spellcheck = "false",
                        autocorrect = "off"
                    })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "******" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6">
                        <div class="form-group">
                            <label>Nhập lại mật khẩu</label>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "******" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">
                        <i class="fa fa-exclamation-triangle"></i> @ViewBag.Error
                    </div>
                }

                <button type="submit" class="btn-register">
                    Hoàn tất đăng ký
                </button>
            }
        </div>

        <div class="card-footer">
            <p style="margin: 0; font-size: 14px;">
                Đã có tài khoản?
                <a href="@Url.Action("Login", "Users")">Đăng nhập ngay</a>
            </p>
            <div style="margin-top: 10px;">
                <a href="@Url.Action("Index", "Home")" style="color: #888; font-size: 12px; text-decoration: none;">
                    <i class="fa fa-arrow-left"></i> Về trang chủ
                </a>
            </div>
        </div>
    </div>

    <script>
        // Hàm dùng chung để áp dụng logic ép chữ thường
        function makeLowercase(elementId) {
            var input = document.getElementById(elementId);
            if (input) {
                input.addEventListener('input', function (e) {
                    var start = this.selectionStart;
                    var end = this.selectionEnd;
                    this.value = this.value.toLowerCase();
                    this.setSelectionRange(start, end);
                });
            }
        }

        // Gọi hàm cho Username
        makeLowercase('username-field');

        // Gọi hàm cho Email
        makeLowercase('email-field');
    </script>

</body>
</html>