@model WebApplication1.Models.THELOAI

@{
    ViewBag.Title = "Sửa Thể Loại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mt-3">Sửa Thể Loại</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal card p-4 shadow-sm mt-3">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaTL)

        <div class="mb-3 row">
            @Html.LabelFor(model => model.TenTL, "Tên Thể Loại", htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTL, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-warning">Cập nhật</button>
                @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}