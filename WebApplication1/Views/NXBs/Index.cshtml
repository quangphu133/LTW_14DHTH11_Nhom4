@model IEnumerable<WebApplication1.Models.NXB>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center bg-white">
        <h5 class="m-0 font-weight-bold text-dark">Quản lý Nhà Xuất Bản</h5>
        <a href="@Url.Action("Create")" class="btn btn-dark">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>
    <div class="card-body">
        @if (TempData["Loi"] != null)
        {
            <div class="alert alert-danger">@TempData["Loi"]</div>
        }
        @if (TempData["ThongBao"] != null)
        {
            <div class="alert alert-success">@TempData["ThongBao"]</div>
        }

        <div class="table-responsive">
            <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                <thead class="table-light">
                    <tr>
                        <th>Tên NXB</th>
                        <th>Địa chỉ</th>
                        <th>Số điện thoại</th>
                        <th style="width: 150px;">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.TenNXB</td>
                            <td>@item.DiaChi</td>
                            <td>@item.SDT</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.MaNXB })" class="btn btn-sm btn-primary" title="Sửa">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.MaNXB })"
                                   class="btn btn-sm btn-danger"
                                   title="Xóa"
                                   onclick="return confirm('Bạn có chắc muốn xóa NXB này không?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>