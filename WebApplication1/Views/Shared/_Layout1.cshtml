<!doctype html>
<html class="no-js" lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - Nhà sách nhóm 5</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="/layout_nhasach_thamkhao/apple-touch-icon.png">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/icomoon.css">
    <link rel="stylesheet" href="/css/jquery-ui.css">
    <link rel="stylesheet" href="/css/owl.carousel.css">
    <link rel="stylesheet" href="/css/transitions.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/color.css">
    <link rel="stylesheet" href="/css/responsive.css">
    <script src="/js/vendor/modernizr-2.8.3-respond-1.4.2.min.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .tg-userlogin .dropdown-menu {
            right: 0;
            left: auto;
            min-width: 180px;
        }

            .tg-userlogin .dropdown-menu li a {
                padding: 10px 15px;
                display: block;
                color: #333;
            }

                .tg-userlogin .dropdown-menu li a:hover {
                    background-color: #77b748; /* Màu xanh của theme */
                    color: #fff;
                }

        .login-links a {
            color: #333;
            font-weight: 600;
            font-size: 13px;
        }

            .login-links a:hover {
                color: #77b748;
            }
    </style>
</head>
<body class="tg-home tg-homeone">
    <div id="tg-wrapper" class="tg-wrapper tg-haslayout">
        <header id="tg-header" class="tg-header tg-haslayout">
            <div class="tg-topbar">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <div class="tg-userlogin">
                                @if (Session["UserID"] != null)
                                {
                                    <figure>
                                        <a href="javascript:void(0);">
                                            <img src="/images/users/img-01.jpg" alt="Avatar">
                                        </a>
                                    </figure>

                                    <div class="dropdown" style="display:inline-block;">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="padding: 10px 0; text-decoration: none; color: #333; display: flex; align-items: center;">
                                            <span>Chào, <strong>@Session["FullName"]</strong></span>
                                            <i class="fa fa-angle-down" style="margin-left: 5px;"></i>
                                        </a>

                                        <ul class="dropdown-menu" style="right: 0; left: auto;">
                                            @if (Session["Role"] != null && Session["Role"].ToString() == "NhanVien")
                                            {
                                                <li><a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })"><i class="fa fa-cogs">Trang Quản Trị</i> </a></li>
                                                <li role="separator" class="divider"></li>
                                            }

                                            <li><a href="@Url.Action("LichSuDonHang", "Home")"><i class="fa fa-list-alt">Lịch sử đơn hàng</i></a></li>
                                            <li><a href="@Url.Action("Logout", "Users")" class="text-danger"><i class="fa fa-sign-out">Đăng xuất</i></a></li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <div style="padding-top: 13px; display: flex; align-items: center;">
                                        <a href="@Url.Action("Login", "Users")" style="color: #333; font-weight: 600;">
                                            <i class="fa fa-user" style="margin-right:5px;">Đăng nhập</i>
                                        </a>

                                        <span style="margin: 0 10px; color: #ccc;">|</span>

                                        <a href="@Url.Action("Register", "Users")" style="color: #333; font-weight: 600;">
                                            Đăng ký
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tg-middlecontainer">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <strong class="tg-logo"><a href="/"><img src="/images/logo.png" alt="HUIT BookStore"></a></strong>
                            <div class="tg-wishlistandcart">
                                <div class="dropdown tg-themedropdown tg-wishlistdropdown">
                                    <div class="dropdown-menu tg-themedropdownmenu" aria-labelledby="tg-wishlisst">
                                        <div class="tg-description"><p>Chưa có sản phẩm nào trong Wishlist!</p></div>
                                    </div>
                                </div>

                                @* --- Gọi Partial View Giỏ Hàng --- *@
                                @Html.Action("GioHangPartial", "GioHang")

                            </div>
                            <div class="tg-searchbox">
                                @using (Html.BeginForm("TimKiem", "Home", FormMethod.Get, new { @class = "tg-formtheme tg-formsearch" }))
                                {
                                    <fieldset>
                                        <input type="text" name="search" class="typeahead form-control" placeholder="Tìm sách, tác giả...">
                                        <button type="submit"><i class="icon-magnifier"></i></button>
                                    </fieldset>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tg-navigationarea">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                            <nav id="tg-nav" class="tg-nav">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#tg-navigation" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                                <div id="tg-navigation" class="collapse navbar-collapse tg-navigation">
                                    <ul>
                                        @Html.Action("_MenuPartial", "Home")
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer id="tg-footer" class="tg-footer tg-haslayout">
            <div class="tg-footerarea">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
